<%- include('./partials/header') %>

<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-6xl">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">User Panel</h2>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-6xl">
        <div class="bg-white py-12 px-8 shadow-lg sm:rounded-lg sm:px-16 grid grid-cols-1 md:grid-cols-2 gap-44">
            <!-- Register Form -->
            <div>
                <h3 class="text-2xl font-medium leading-6 text-gray-900">Create Your Account</h3>
                <form class="mt-4 space-y-4" action="/users/register" method="post">
                    <div>
                        <label for="fullname" class="sr-only">Full Name</label>
                        <input id="fullname" name="fullname" type="text" required class="appearance-none rounded-md relative block w-full px-4 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-lg" placeholder="Full Name">
                    </div>
                    <div>
                        <label for="contact" class="sr-only">Phone Number</label>
                        <input id="contact" name="contact" type="number" required class="appearance-none rounded-md relative block w-full px-4 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-lg" placeholder="Phone Number">
                    </div>
                    <div>
                        <label for="email" class="sr-only">Email</label>
                        <input id="email" name="email" type="email" required class="appearance-none rounded-md relative block w-full px-4 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-lg" placeholder="Email">
                    </div>
                    <div>
                        <label for="password" class="sr-only">Password</label>
                        <input id="password" name="password" type="password" required class="appearance-none rounded-md relative block w-full px-4 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-lg" placeholder="Password">
                    </div>
                    <div>
                        <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-lg font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Create My Account
                        </button>
                    </div>
                </form>
            </div>

            <!-- Login Form -->
            <div>
                <h3 class="text-2xl font-medium leading-6 text-gray-900">Login To Your Account</h3>
                <form class="mt-4 space-y-4" action="/users/login" method="post">
                    <div>
                        <label for="login-email" class="sr-only">Email</label>
                        <input id="login-email" name="email" type="email" required class="appearance-none rounded-md relative block w-full px-4 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-lg" placeholder="Email">
                    </div>
                    <div>
                        <label for="login-password" class="sr-only">Password</label>
                        <input id="login-password" name="password" type="password" required class="appearance-none rounded-md relative block w-full px-4 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-lg" placeholder="Password">
                    </div>
                    <div>
                        <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-lg font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Login
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <p class="mt-2 text-center text-lg text-gray-700">
            <a href="/owners" class="text-indigo-600 hover:text-indigo-500">Return to Owner Panel</a>
        </p>
    </div>
</div>

<% if(error.length > 0) { %>
    <div class="fixed bottom-5 left-1/2 transform -translate-x-1/2 bg-red-500 text-white px-4 py-2 rounded shadow-lg">
        <%= error %>
    </div>
<% } %>

<% if(success.length > 0) { %>
    <div class="fixed bottom-5 left-1/2 transform -translate-x-1/2 bg-green-500 text-white px-4 py-2 rounded shadow-lg">
        <%= success %>
    </div>
<% } %>

<footer class="mt-8 text-center text-sm text-gray-500">
    Created and Managed by <a href="https://twitter.com/amanv08" class="text-indigo-600 hover:text-indigo-500">@amanv08</a>
</footer>

